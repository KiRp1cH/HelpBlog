<%= render 'shared/errors', object: @answer %>

<%= form_with model: [@question, @answer] do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label t('answers.body') %>
    </div>

    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control', required: true %>
    </div>
  </div>

  <%= f.submit t('buttons.submit'), class: 'btn btn-primary' %>
  <%= link_to t('buttons.back'), question_path(@question), class: 'btn btn-secondary' %>
<% end %>