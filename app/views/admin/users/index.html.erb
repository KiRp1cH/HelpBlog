<% provide :page_title, t('current_page.admin_panel') %>
<% currently_at 'Users' %>

<h1 class="mb-4"><%= t('current_page.admin_panel') %></h1>

<div class="btn-group mb-3">
  <%= link_to t('admin.download_zipped_xlsx'), admin_users_path(format: :zip),
    class: 'btn btn-secondary' %>
</div>

<%= pagination @pagy %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col"><%= t('admin.table_users.name') %></th>
      <th scope="col">Email</th>
      <th scope="col"><%= t('admin.table_users.created_at') %></th>
      <th scope="col"><%= t('admin.table_users.updated_at') %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @users %>
  </tbody>
</table>

<%= pagination @pagy %>

<h2 class="mb-3 mt-5"><%= t('admin.upload_users_from_xlsx') %></h2>

<%= form_with url: admin_users_path do |f| %>
  <div class="mb-3 row">
    <div class="col-sm-2 col-form-label">
      <%= f.label :archive, t('admin.select_archive') %>
    </div>

    <div class="col-sm-10">
      <%= f.file_field :archive, class: 'form-control' %>
    </div>
  </div>

  <%= f.submit t('admin.upload'), class: 'btn btn-primary' %>
<% end %>